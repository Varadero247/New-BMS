{
  "name": "bms-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Building Management System - Full Stack Monorepo",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @bms/database generate",
    "db:push": "pnpm --filter @bms/database push",
    "db:migrate": "pnpm --filter @bms/database migrate",
    "db:studio": "pnpm --filter @bms/database studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
